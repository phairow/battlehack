<script language="JavaScript" type="text/javascript" src="http://humanityonline.com/HOL_Avatar.js"></script>

<script language="javascript">

        HOL_SetupAvatar("Avatar", "360", "240");
        function HOL_OnFlashLoaded() {
           HOL_PlayFLV("Avatar", "/Humanity_Loop.flv");
        }

        function HOL_OnVideoDone(avatar, url) {
           HOL_PlayFLV("Avatar", "/Humanity_Loop.flv");
        }
                   
</script>
<div class="container">
	<div style="margin:auto;" id="avatar-home"><div style="margin:auto;" id="Avatar"></div>
</div>
<div class="container">
	<form action="/searchresults" method="post" class="form-search">
		<fieldset>
			<div class="form-group">
		    <legend>Search</legend>
			    <div class="row">
				  <div class="col-lg-4">
					<input class="form-control search-query" type="text" name="q"/>
				  </div>

				  <div class="col-lg-4">
					<input class="btn btn-primary" type="submit" value="search"/>
				  </div>
				</div>
			</div>
			<div class="form-group">
				<label for="expert">Ask an expert </label>
				<input id="expert" type="checkbox" name="expert"/>
			</div>
			<div class="form-group">
		   		<legend>Category</legend>
				<label>
			        <input checked type="radio" name="category" value="automotive"/> Automotive
			    </label>
				<label>
					<input type="radio" name="category" value="automotive"/> Animals
				</label>
			</div>
		</fieldset>
	</form>
</div>

