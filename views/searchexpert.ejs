   socket.on('connect', function () {
    socket.emit('seed', '<%= seed %>');

	  socket.on('answer', function (data) {
		    document.getElementById('result').innerHTML = 'Your answer has arrived<div>' + data.data + '</div>';
	  });
  });

</script>

